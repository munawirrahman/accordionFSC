<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property
            name = "isExpanded"
            label = "is Section Expanded?"
            description = "Set True if you want the accordion expanded by default."
            default = "false"
            type = "Boolean"
            required = "true"/>
            <property
            name = "label"
            label = "Label of the Accordion"
            type = "String"
            required = "true"
            role = "inputOnly"/>
            <property
            name = "htmlText"
            label = "HTML Text when Accordion Expanded"
            type = "String"
            required = "true"
            role = "inputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>